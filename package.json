{
  "name": "nieto-icon-theme",
  "displayName": "PedrooNietoo Icon Theme",
  "description": "A simple icon and folder theme for Visual Studio Code",
  "publisher": "Pedro Nieto",
  "version": "0.0.1",
  "icon": "resources/icons/symbols.png",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Themes"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Pedroo-Nietoo/PedrooNietoo-Icon-Theme.git"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "settings": [
      {
        "command": "nieto-icon-theme.helloWorld",
        "title": "Hello World"
      }
    ],
    "iconThemes": [
      {
        "id": "pedroo-nietoo-icon-theme",
        "label": "PedrooNietoo Icon Theme",
        "path": "./themes/icon-theme.json"
      }
    ]
  },
  
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "ts-loader": "^9.5.1",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
